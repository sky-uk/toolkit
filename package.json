{
  "private": true,
  "engines": {
    "node": "14.15.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/commit/config.js"
    },
    "paths": "--include-path node_modules/ --include-path node_modules/",
    "precision": "--precision 9"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "stylelint '**/*.scss' --syntax scss",
    "build": "npm run build:core && npm run build:toolkit",
    "build:core": "node-sass $npm_package_config_precision --output-style compressed $npm_package_config_paths src/_core.scss build/toolkit-core.min.css",
    "build:toolkit": "node-sass $npm_package_config_precision --output-style $npm_package_config_paths src/_main.scss build/toolkit.min.css",
    "release": "./scripts/release.sh"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "eslintIgnore": [
    "node_modules/"
  ],
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/lint": "8.1.0",
    "@sky-uk/eslint-config-sky": "22.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cheerio": "^1.0.0-rc.2",
    "commitizen": "4.0.3",
    "css-hot-loader": "^1.3.8",
    "css-loader": "3.1.0",
    "cz-customizable": "5.3.0",
    "danger": "7.0.2",
    "eslint": "4.18.2",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-promise": "3.7.0",
    "eyeglass": "^1.3.0",
    "globby": "9.0.0",
    "husky": "1.2.0",
    "lerna": "3.4.3",
    "mini-css-extract-plugin": "0.5.0",
    "normalize.css": "7.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.8.2",
    "raw-loader": "^0.5.1",
    "remark": "9.0.0",
    "remark-frontmatter": "1.2.0",
    "remark-html": "^7.0.0",
    "sass-loader": "^6.0.7",
    "sass-mq": "^3.3.2",
    "style-loader": "^0.20.3",
    "stylelint": "10.1.0",
    "stylelint-config-sky-uk": "3.1.0",
    "stylelint-scss": "^2.1.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "supercell": "^1.2.0",
    "unist-util-remove": "^1.0.0",
    "unist-util-visit": "^1.3.0",
    "webpack": "4.28.3",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "node-sass": "^5.0.0"
  }
}